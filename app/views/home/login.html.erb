<% form_tag do %>
    <p>
        <label for="name">Nom d'utilisateur: </label>
        <%= text_field_tag :name, params[:name] %>
    </p>

    <p>
        <label for="password">Mot de passe: </label>
        <%= password_field_tag :password, params[:password] %>
    </p>

    <p>
        <%= submit_tag "Se connecter" %>
    </p>
<% end %>