<h1>Listing accounts</h1>

<table class="dataTable">
  <tr class="dataCaption">
    <td>Name</td>
    <td>Description</td>
    <td>Balance</td>
    <td></td>
  </tr>

<% for account in @accounts %>
  <tr class="<%= cycle('dataRowColor1','dataRowColor2') %>">
    <td><%=h account.name %></td>
    <td><%=h account.description %></td>
    <td><%=h account.balance %></td>
    <td class="dataCommands"><%= link_to 'Show', account %>&nbsp;
        <%= link_to 'Edit', edit_account_path(account) %>&nbsp;
        <%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New account', new_account_path %>
