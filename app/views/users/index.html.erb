<h1>Listing users</h1>
<table class="dataTable">
    <tr class="dataCaption">
        <td>Name</td>
        <td></td>
    </tr>

    <% for user in @users %>
        <tr class="<%= cycle('dataRowColor1', 'dataRowColor2') %>">
            <td><%= h user.name %></td>
            <td class="dataCommands">
                <%= link_to 'Show', user %>&nbsp;
                <%= link_to 'Edit', edit_user_path(user) %>&nbsp;
                <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
    <% end %>
</table>

<br/>

<%= link_to 'New user', new_user_path %>
