<h1>Listing operations</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Type</th>
    <th>Date</th>
    <th>Repeat</th>
  </tr>

<% @operations.each do |operation| %>
  <tr>
    <td><%=h operation.title %></td>
    <td><%=h operation.description %></td>
    <td><%=h operation.amount %></td>
    <td><%=h operation.ope_type %></td>
    <td><%=h operation.ope_date %></td>
    <td><%=h operation.repeat %></td>
    <td><%= link_to 'Show', operation %></td>
    <td><%= link_to 'Edit', edit_operation_path(operation) %></td>
    <td><%= link_to 'Destroy', operation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

